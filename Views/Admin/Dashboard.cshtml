@model Tuple<int, int>
@{
    Layout = "_Layout_Admin";
    ViewData["Title"] = "Dashboard";
}

<article>
    <div class="page-header">
        <h3 class="page-title">
            <span class="page-title-icon bg-gradient-primary text-white me-2">
                <i class="mdi mdi-home"></i>
            </span> Dashboard
        </h3>
    </div>
    <div class="row row-cols-1 row-cols-lg-2">
        <div class="col stretch-card grid-margin">
            <div class="card bg-gradient-warning card-img-holder text-white">
                <div class="card-body">
                    <img src="~/vendor/purpleadmin/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image"/>
                    <h4 class="font-weight-normal mb-3">
                        Pending Request Found Item <i class="mdi mdi-clock  mdi-24px float-right"></i>
                    </h4>
                    <h2 class="mb-5">@Model.Item1</h2>
                    @if (Model.Item1 > 0)
                    {
                        <a href="Items/RequestFound?status=pending" class="link-dark">Review <i class="mdi mdi-chevron-right"></i></a>
                    }
                </div>
            </div>
        </div>
        <div class="col stretch-card grid-margin">
            <div class="card bg-gradient-warning card-img-holder text-white">
                <div class="card-body">
                    <img src="~/vendor/purpleadmin/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image"/>
                    <h4 class="font-weight-normal mb-3">
                        Pending Request Claim Item <i class="mdi mdi-clock  mdi-24px float-right"></i>
                    </h4>
                    <h2 class="mb-5">@Model.Item2</h2>
                    @if (Model.Item2 > 0)
                    {
                        <a href="Items/RequestClaim?status=pending" class="link-dark">Review <i class="mdi mdi-chevron-right"></i></a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="col-md-7 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="clearfix">
                            <h4 class="card-title float-left">Found And Claimed Items</h4>
                            <div id="visit-sale-chart-legend" class="rounded-legend legend-horizontal legend-top-right float-right"></div>
                        </div>
                        <canvas id="visit-sale-chart" class="mt-4"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>