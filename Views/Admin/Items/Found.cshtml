@model IEnumerable<Client.Models.Item>

@{
    Layout = "Shared/_Layout_Admin";
}

<article class="container">
    <div class="row g-6 g-lg-4 row-cols-1 row-cols-md-3 row-cols-lg-4">
        @foreach (var i in Model)
        {
            <div class="col">
                <div class="card grid-margin bg-gradient-dark">
                    <div class="card-header">
                        <div class="card-title">
                            <h4>@i.Name</h4>
                        </div>
                    </div>
                        <img class="card-img-top" src="@i.ImagePath" alt="" style="height: 250px">
                    <div class="card-body p-1">
                        <p class="card-subtitle text-truncate">
                            @i.Description
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</article>