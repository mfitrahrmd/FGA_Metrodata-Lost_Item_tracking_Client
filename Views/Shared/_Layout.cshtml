@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Client</title>
    <link rel="stylesheet" href="~/vendor/purpleadmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/vendor/purpleadmin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="~/vendor/purpleadmin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="~/vendor/purpleadmin/assets/images/favicon.ico"/>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>

<!--====== PRELOADER PART START ======-->

<div class="preloader">
    <div class="spin">
        <div class="cube1"></div>
        <div class="cube2"></div>
    </div>
</div>

<!--====== PRELOADER PART START ======-->

<!--====== LOADING SPINNER START ======-->

<div class="loading" style="display: none;">
    <div class="spin">
        <div class="cube1"></div>
        <div class="cube2"></div>
    </div>
</div>

<!--====== LOADING SPINNER END ======-->


<!--====== HEADER PART START ======-->

<header class="header">
    <div class="navbar-area">
        <div class="">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
                        <div class="container-fluid">
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarScroll" aria-controls="navbarScroll" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                            <div class="collapse navbar-collapse" id="navbarScroll">
                                <ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll" style="--bs-scroll-height: 100px;">
                                    <li class="nav-item">
                                        <a class="navbar-brand brand-logo" href="/">
                                            <img src="~/vendor/purpleadmin/assets/images/logo-mini.svg" alt="logo"/>
                                        </a>
                                    </li>
                                </ul>
                                <ul class="navbar-nav gap-3">
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <li class="nav-item">
                                                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-primary">Dashboard</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="nav-item">
                                                <a asp-controller="User" asp-action="Dashboard" class="btn btn-primary">Dashboard</a>
                                            </li>
                                        }
                                    }

                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <li class="nav-item">
                                            <a asp-controller="Auth" asp-action="Logout" class="btn btn-primary">Logout</a>
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="nav-item">
                                            <a asp-controller="Auth" asp-action="Login" class="btn btn-primary">Login</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </nav>
                    <!-- navbar -->
                </div>
            </div>
            <!-- row -->
        </div>
        <!-- container -->
    </div>
    <!-- navbar area -->
</header>


<!--====== HEADER PART ENDS ======-->

<main role="main" class="pb-3">
    @RenderBody()
</main>

<!-- plugins:js -->
<script src="~/vendor/purpleadmin/assets/vendors/js/vendor.bundle.base.js"></script>
<!-- endinject -->
<!-- Plugin js for this page -->
<script src="~/vendor/purpleadmin/assets/vendors/chart.js/Chart.min.js"></script>
<script src="~/vendor/purpleadmin/assets/js/jquery.cookie.js" type="text/javascript"></script>
<!-- End plugin js for this page -->
<!-- inject:js -->
<script src="~/vendor/purpleadmin/assets/js/off-canvas.js"></script>
<script src="~/vendor/purpleadmin/assets/js/hoverable-collapse.js"></script>
<script src="~/vendor/purpleadmin/assets/js/misc.js"></script>
<!-- endinject -->
<!-- Custom js for this page -->
<script src="~/vendor/purpleadmin/assets/js/dashboard.js"></script>
<script src="~/vendor/purpleadmin/assets/js/todolist.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<!-- End custom js for this page -->

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>